---
layout: null
---
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <!-- Sitemap for Posts -->
  <sitemap>
    <loc>{{ site.url }}/post-sitemap.xml</loc>
    {% assign post_sitemap_last_modified = site.posts | map: 'last_modified_at' | sort | last %}
    {% if post_sitemap_last_modified %}
      <lastmod>{{ post_sitemap_last_modified | date_to_xmlschema }}</lastmod>
    {% endif %}
  </sitemap>

  <!-- Sitemap for Pages -->
  <sitemap>
    <loc>{{ site.url }}/page-sitemap.xml</loc>
    {% assign page_sitemap_last_modified = site.pages | map: 'last_modified_at' | sort | last %}
    {% if page_sitemap_last_modified %}
      <lastmod>{{ page_sitemap_last_modified | date_to_xmlschema }}</lastmod>
    {% endif %}
  </sitemap>

  <!-- Sitemap for Tag Pages -->
  <sitemap>
    <loc>{{ site.url }}/post_tag-sitemap.xml</loc>
    {% assign tag_sitemap_last_modified = site.tags | map: 'last_modified_at' | sort | last %}
    {% if tag_sitemap_last_modified %}
      <lastmod>{{ tag_sitemap_last_modified | date_to_xmlschema }}</lastmod>
    {% endif %}
  </sitemap>

</sitemapindex>