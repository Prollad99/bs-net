---
layout: null
---
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <!-- Sitemap for Posts -->
  <sitemap>
    <loc>{{ site.url }}/post-sitemap.xml</loc>
    <lastmod>
      {% assign last_modified_posts = site.posts | sort: 'last_modified_at' | last %}
      {{ last_modified_posts.last_modified_at | date: "%Y-%m-%dT%H:%M:%S%:z" }}
    </lastmod>
  </sitemap>

  <!-- Sitemap for Pages -->
  <sitemap>
    <loc>{{ site.url }}/page-sitemap.xml</loc>
    <lastmod>
      {% assign last_modified_pages = site.pages | sort: 'last_modified_at' | last %}
      {{ last_modified_pages.last_modified_at | date: "%Y-%m-%dT%H:%M:%S%:z" }}
    </lastmod>
  </sitemap>

  <!-- Sitemap for Tag Pages -->
  <sitemap>
    <loc>{{ site.url }}/post_tag-sitemap.xml</loc>
    <lastmod>
      {% assign all_posts_with_tags = "" %}
      {% for tag in site.tags %}
        {% assign all_posts_with_tags = all_posts_with_tags | append: tag[1] | split: ',' %}
      {% endfor %}
      {% assign unique_posts_with_tags = all_posts_with_tags | uniq %}
      {% assign sorted_posts_with_tags = unique_posts_with_tags | sort: 'last_modified_at' %}
      {% assign last_modified_post = sorted_posts_with_tags | last %}
      {% if last_modified_post %}
        {{ last_modified_post.last_modified_at | date: "%Y-%m-%dT%H:%M:%S%:z" }}
      {% endif %}
    </lastmod>
  </sitemap>

</sitemapindex>