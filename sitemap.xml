---
layout: null
---
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <!-- Sitemap for Posts -->
  <sitemap>
    <loc>{{ site.url }}/post-sitemap.xml</loc>
    <lastmod>{% assign last_modified_posts = site.posts | sort: 'last_modified_at' | last %}{{ last_modified_posts.last_modified_at | date: "%Y-%m-%dT%H:%M:%S%:z" }}</lastmod>
  </sitemap>

  <!-- Sitemap for Pages -->
  <sitemap>
    <loc>{{ site.url }}/page-sitemap.xml</loc>
    <lastmod>{% assign last_modified_pages = site.pages | sort: 'last_modified_at' | last %}{{ last_modified_pages.last_modified_at | date: "%Y-%m-%dT%H:%M:%S%:z" }}</lastmod>
  </sitemap>

  <!-- Sitemap for Tag Pages -->
  <sitemap>
    <loc>{{ site.url }}/post_tag-sitemap.xml</loc>
    <lastmod>{% assign last_modified_tags = site.tags | map: "last_modified_at" | compact | sort: 'last_modified_at' | last %}{{ last_modified_tags | date: "%Y-%m-%dT%H:%M:%S%:z" }}</lastmod>
  </sitemap>

</sitemapindex>