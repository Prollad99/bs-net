---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="{{ site.url }}/sitemap.xsl"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <!-- Sitemap for Posts -->
  <sitemap>
    <loc>{{ site.url }}/post-sitemap.xml</loc>
    <lastmod>
      {% assign last_modified_posts = site.posts | sort: 'last_modified_at' | last %}
      {{ last_modified_posts.last_modified_at | date: "%Y-%m-%dT%H:%M:%S%:z" }}
    </lastmod>
  </sitemap>

  <!-- Sitemap for Pages -->
  <sitemap>
    <loc>{{ site.url }}/page-sitemap.xml</loc>
    <lastmod>
      {% assign last_modified_pages = site.pages | sort: 'last_modified_at' | last %}
      {{ last_modified_pages.last_modified_at | date: "%Y-%m-%dT%H:%M:%S%:z" }}
    </lastmod>
  </sitemap>

  <!-- Sitemap for Tags -->
  <sitemap>
    <loc>{{ site.url }}/post_tag-sitemap.xml</loc>
    <lastmod>
      {% assign latest_modified_tag = nil %}
      {% for tag in site.tags %}
        {% for post in tag[1] %}
          {% if latest_modified_tag == nil or post.last_modified_at > latest_modified_tag %}
            {% assign latest_modified_tag = post.last_modified_at %}
          {% endif %}
        {% endfor %}
      {% endfor %}
      {% if latest_modified_tag %}
        {{ latest_modified_tag | date: "%Y-%m-%dT%H:%M:%S%:z" }}
      {% endif %}
    </lastmod>
  </sitemap>

</sitemapindex>